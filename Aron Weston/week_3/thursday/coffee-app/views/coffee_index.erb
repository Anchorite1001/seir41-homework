<head><title>The Espresso Dashboard</title></head>
<link rel="stylesheet" href="style.css">

</head>
<h1>The Espresso Dashboard</h1>
<table>
  <thead>
    <tr>
      <th>Product Name</th>
      <th>Roaster</th>
    </tr>
  </thead>
  <tbody>
    <% @coffees.each do |coffee| %>
    <tr>
      <td><%= coffee["product_name"] %></td>
      <td><%= coffee["roaster_name"] %></td>
      <td><a href="/coffee/<%= coffee["id"] %>">See Coffee</a></td>
      <td><a href="/coffee/<%= coffee["id"] %>">Edit</a></td>
      <td><a href="/coffee/<%= coffee["id"] %>">Delete</a></td>
    </tr>
    <% end %>
  </tbody>
</table>